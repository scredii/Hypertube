<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/css/profile.css" />
<% if (message.length > 0) { %>
    <div class="alert alert-success"><%= message %></div>
<% } %>
<%if (profile.login === user.login){%>
  <button id="settings" class="btn btn-default btn-lg btn-warning" data-toggle="modal" data-target="#editModal">
    <i class="fa fa-cog" aria-hidden="true"></i>
  </button>
  <% include ../partials/profileModal %>
<%}%>
<br>
<h1 id="username"><%=profile.login%></h1>

<!--- CAROUSEL ----->
<div class="row">
  <div class="col-xs-3"></div>
    <div id="userCarousel" class="carousel slide col-xs-6" data-ride="carousel">
      <div class="carousel-inner">
        <div class="item active" data-toggle="modal" data-target="#photoModal">
          <img id="CarouselPic" src="<%=profile.photo%>"></img>
        </div>
      </div>
    </div>
  <div class="col-xs-3"></div>
</div>
<!--- CAROUSEL ----->
<h3><strong> <%=profile.firstName%> </strong> <%=profile.name%> </h3><br>
<h4> favourite language : <%=profile.language%></h4>
<% include ../partials/photoModal %>
<% include ../partials/footer %>
