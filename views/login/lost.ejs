<% include ../partials/header %>
<div class="container">
  <% if (error.length > 0) { %>
      <div class="alert alert-danger"><%= error %></div>
  <% } if (success.length > 0) { %>
      <div class="alert alert-success"><%= success %></div>
  <% } %>
  <div class="jumbotron jumbotronWithForm">
    <h2>Password Lost<h2>
    <form action="/lost" method="post" id="lostForm">
      <div class="form-group">
        <input type="text" name="login" placeholder="Username" class="form-control" required=true>
        <input type="text" name="email" placeholder="Email" class="form-control" required=true>
      </div>
      <input type='submit' class="btn btn-default btn-primary" value="Submit">
      <a class="btn btn-default btn-warning" href="/login">Log In</a>
    </form>
  </div>
</div>
<script src="/js/form.js"></script>
<% include ../partials/footer %>
