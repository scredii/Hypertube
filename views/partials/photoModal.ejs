<!-- MODAL OVERLAY-->
  <div class="modal fade" id="photoModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <img class="img img-responsive full-width" src="<%=profile.photo%>">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%if (profile.login === user.login){%>
            <button id="settings" class="btn btn-default btn-warning" data-toggle="modal" data-target="#editPhotoModal">Edit</button>
          <%}%>
        </div>
      </div>
    </div>
  </div>

<%if (profile.login === user.login){%>
  <div class="modal fade" id="editPhotoModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <span>Change profile picture</span>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <form action="/user/changepicture" method="post" id="editPhotoForm">
            <input type="text" name="photo" value="<%=profile.photo%>" class="form-control" required>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit"  class="btn btn-warning" value="change photo">
          </form>
        </div>
      </div>
    </div>
  </div>
<%}%>
<!-- MODAL OVERLAY-->
